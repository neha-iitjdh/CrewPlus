# ================================
# CrewPlus Backend Dockerfile - Development
# ================================
# With nodemon for hot-reload

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Start with nodemon for hot-reload
CMD ["npm", "run", "dev"]
